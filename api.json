            "name": "Session-Token",
            "in": "header",
            "required": true,
            "type": "string"
          },
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "400": {
            "description": "Session token not provided"
          },
          "401": {
            "description": "Session token not valid"
          },
          "412": {
            "description": "Not allowed to end the turn on the given game"
          },
          "204": {
            "description": "Successful operation"
